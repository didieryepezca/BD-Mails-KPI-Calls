@model IEnumerable<EmailSenderOpplus.Models.Entities.TB_ATTO_ASESORES>

@{
    ViewData["Title"] = "VerAsesores";
}

<style>

    /*table {
        display: block;
        overflow-x: auto;
        white-space: nowrap;
    }*/

        table tbody tr td {
            font-size: 9px;
        }

        table thead tr th {
            font-size: 8px;
        }
</style>


<div class="page-header">
    <h3 class="page-title"> Data de Asesores </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Atento" asp-action="CargarBasesAtento">Cargar Bases ATENTO</a></li>
            <li class="breadcrumb-item active" aria-current="page"> Data de Asesores </li>
        </ol>
    </nav>
</div>



<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Informacion de Asesores</h4>

                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DNI)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NOMBRES)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ESTADO)
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @{ int contador = 1; }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @contador
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.DNI)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NOMBRES)
                                </td>
                                @if (item.ESTADO == "Activo")
                                {
                                    <td>
                                        <label class="badge badge-success">@Html.DisplayFor(modelItem => item.ESTADO)</label>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <label class="badge badge-danger">@Html.DisplayFor(modelItem => item.ESTADO)</label>
                                    </td>
                                }


                            </tr>

                            contador = contador + 1;
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>

</div>



